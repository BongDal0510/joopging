<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.team4.joopging.mappers.ReportMapper">

    <!--신고 등록 from 유저 to 관리자-->
    <insert id="insertReport">
        INSERT INTO TBL_REPORT
        (
            REPORTNUM, SESSIONID, REPORTCONTENT, REPORTDETAIL, COMMUBNO, COMMUTITLE, REPORTDATE, REPORTSTATUS
        )
        VALUES
        (
            SEQ_REPORT.NEXTVAL, #{sessionId}, #{reportContent}, #{reportDetail}, #{commuBno}, #{commuTitle}, #{reportDate}, #{reportStatus}
        )
    </insert>

<!--
    <insert id="insertSelectKey_commuBno">
        /*태그 안에서는 이와 같은 주석으로 사용해야 한다.*/
        /*게시글 등록 전 다음 시퀀스를 가져와서 insertSelectKey_COMMUBNO메소드의 매개변수로 매핑후 전달한다.*/
        <selectKey keyProperty="commuBno" order="BEFORE" resultType="long">
